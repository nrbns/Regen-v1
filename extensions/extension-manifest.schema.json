// extension-manifest.schema.json
// JSON schema for Omnibrowser extension manifest
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Omnibrowser Extension Manifest",
  "type": "object",
  "required": ["name", "version", "main"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "author": { "type": "string" },
    "main": { "type": "string" },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sandbox": { "type": "boolean", "default": true },
    "events": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
