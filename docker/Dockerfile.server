# CATEGORY C FIX: Dockerfile for server
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY server/package*.json ./server/ || true

# Install dependencies
RUN npm ci --production=false

# Copy server code
COPY server ./server

# Expose port
EXPOSE 4000

# Start server
CMD ["node", "server/redix-server.js"]

