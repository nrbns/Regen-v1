{
  "name": "omnibrowser",
  "version": "0.1.0-alpha",
  "private": true,
  "description": "OmniBrowser: Electron + React + TypeScript + Vite multi-mode desktop browser",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "cross-env JSDOM_NO_CANVAS=1 concurrently -k -n VITE,ELECTRON -c green,blue \"vite --mode development\" \"node scripts/start-electron-dev.cjs\"",
    "dev:full": "npm run dev",
    "build": "cross-env JSDOM_NO_CANVAS=1 vite build",
    "build:types": "tsc -b",
    "build:app": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 0",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "perf:test": "tsx scripts/perf/perf-audit.ts",
    "postinstall": "node ./scripts/postinstall.ts",
    "audit:prod": "npm audit --omit=dev",
    "ci:check": "npm run build:types && npm run lint && npm run audit:prod && npm run perf:test"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0",
    "@mozilla/readability": "^0.6.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.8",
    "fast-xml-parser": "^4.5.0",
    "framer-motion": "^11.18.2",
    "html-entities": "^2.5.2",
    "iconv-lite": "^0.6.3",
    "jsdom": "^24.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.453.0",
    "mammoth": "^1.6.0",
    "meilisearch": "^0.40.0",
    "murmurhash3js": "^3.0.1",
    "p-queue": "^8.0.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.8.69",
    "playwright": "^1.48.0",
    "playwright-core": "^1.48.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "robots-parser": "^3.0.1",
    "shadcn-ui": "^0.9.4",
    "tailwindcss": "^3.4.14",
    "tough-cookie": "^4.1.4",
    "ts-pattern": "^5.1.2",
    "canvas": "file:stubs/canvas-stub",
    "bufferutil": "file:stubs/bufferutil-stub",
    "utf-8-validate": "file:stubs/utf-8-validate-stub",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.6.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@eslint/js": "^9.10.0",
    "eslint-plugin-react": "^7.37.1",
    "typescript-eslint": "^8.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^39.1.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.11.1",
    "postcss": "^8.4.47",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.omnibrowser",
    "productName": "OmniBrowser",
    "files": [
      "dist-web/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist-release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux.${ext}"
    }
  }
}
