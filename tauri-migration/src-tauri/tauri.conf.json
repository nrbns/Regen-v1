{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RegenBrowser",
  "version": "0.1.0",
  "identifier": "in.omnibrowser.regen",
  "build": {
    "beforeDevCommand": "node scripts/noop.js",
    "beforeBuildCommand": "npm run build && (curl -fsSL https://ollama.com/install.sh | sh || true) && (ollama pull phi3:mini || true) && (ollama pull llava:7b || true) && (npx playwright install --with-deps chromium || true)",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "RegenBrowser",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "url": "/",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
