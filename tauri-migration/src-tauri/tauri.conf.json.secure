{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RegenBrowser",
  "version": "0.1.0",
  "identifier": "in.omnibrowser.regen",
  "build": {
    "beforeDevCommand": "node scripts/noop.js",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "RegenBrowser",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "url": "/",
        "theme": "Dark",
        "additionalBrowserArgs": "--disable-web-security --disable-features=VizDisplayCompositor"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws://127.0.0.1:18080 http://127.0.0.1:11434 http://127.0.0.1:4000 https://api.openai.com https://api.anthropic.com https://api.duckduckgo.com; frame-src 'self' https:;",
      "capabilities": {
        "main": {
          "windows": ["main"],
          "webviews": ["main"],
          "plugins": ["global-shortcut"],
          "commands": {
            "allow": [
              "research_stream",
              "research_api",
              "trade_stream",
              "trade_api",
              "search_proxy",
              "extract_page_text",
              "research_agent",
              "research_agent_stream",
              "execute_agent",
              "iframe_invoke",
              "save_session",
              "load_session",
              "list_sessions",
              "delete_session",
              "get_weather",
              "book_train",
              "book_flight"
            ]
          }
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "global-shortcut": {
      "all": false,
      "register": ["Ctrl+Space"]
    }
  }
}

